{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script $CLAUDE_PROJECT_DIR/.claude/hooks/validate_html.py $CLAUDE_PROJECT_DIR/input.html $CLAUDE_PROJECT_DIR/output.html"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script $CLAUDE_PROJECT_DIR/.claude/hooks/validate_html.py --block $CLAUDE_PROJECT_DIR/input.html $CLAUDE_PROJECT_DIR/output.html"
          }
        ]
      }
    ]
  }
}